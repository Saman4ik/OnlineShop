@model List<CategoryDto>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Tables /</span> Basic Tables</h4>
    <hr class="my-5" />
    <div class="card">
        <h5 class="card-header">Categories Table</h5>
        <div class="table-responsive text-nowrap">
            @if (Model.Any())
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Images</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>
                                    <div class="">
                                        <button type="button" class="btn btn-primary"><i class="bx bx-edit-alt me-2"></i> Edit</button>
                                        <button type="button" class="btn btn-danger"><i class="bx bx-trash me-2"></i> Delete</button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="card-body">
                    <p class="card-text">No categories found.</p>
                </div>
            }

        </div>
    </div>
</div>

